<div class="signin-form">
  <%= form_tag sessions_create_path do %>
    <div class="form-group">
      <%= text_field_tag 'email', nil, class: 'form-control', placeholder: 'Your E-mail' %>
    </div>
    <div class="form-group">
      <div class="half-width">
        <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>
    <div class="form-group">
        <%= submit_tag 'Sign In', class: 'btn btn-block btn-info' %>
    </div>    
  <% end %>
  <fb:login-button 
    scope="public_profile,email"
    onlogin="checkLoginState();">
  </fb:login-button>
</div>  